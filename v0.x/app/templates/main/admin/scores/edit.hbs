<div class="row">
  <div class="col s12 l8">
    {{#if editMode}}
      <h3>Bewerk {{model.title}}</h3>
      {{score-form score=model}}

      <div class="row">
        {{#md-btn action='save'}}Opslaan{{/md-btn}}
        {{#md-btn action='cancelEdit'}}Annuleer{{/md-btn}}
      </div>
    {{else}}
      <h3>
        {{#if model.location}}<span class="library-location">{{model.location}}</span>{{/if}}
        {{model.title}}
        <span class="new badge">{{#if model.isOriginal}}origineel{{else}}kopie{{/if}}</span>
      </h3>
      <h4>{{model.composer}}{{#if model.arranger}}, arr. {{model.arranger}}{{/if}}</h4>
      <blockquote>
        {{#if model.comment}}{{model.comment}}{{else}}Geen opmerkingen{{/if}}
      </blockquote>

      <ul>
        <li>Genre: {{#if model.genre}}{{t-label value=model.genre}}{{else}}-{{/if}}</li>
        <li>Duur: {{#if model.duration}}{{fmt-duration millis=model.duration}}{{else}}-{{/if}}</li>
        <li>Uitgeverij: {{#if model.publisher}}{{model.publisher}}{{else}}-{{/if}}</li>
        <li>Uitgeleend aan: {{#if model.load}}{{model.loan}}{{else}}-{{/if}}</li>
      </ul>

      {{audit-note auditable=model}}

      <div class="row">
        {{#md-btn action='toggleEdit'}}Bewerk{{/md-btn}}
        {{#md-btn action='back'}}Terug{{/md-btn}}
      </div>
    {{/if}}

    {{part-upload score=model}}
  </div>
  <div class="col s12 l4">
    {{#if model.parts}}
      {{parts-table parts=model.parts}}
    {{else}}
      Geen bestanden opgeladen
    {{/if}}
  </div>
</div>
