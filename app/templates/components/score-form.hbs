<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s12 m2">
	      {{md-input value=score.location label="Nummer"}}
      </div>
      <div class="col s12 m2">
	      {{t-radios options=genres value=score.genre label="Genre"}}
      </div>
      <div class="col s12 m3">
	      <label>Status</label>
	      {{md-check name="In archief" checked=score.isArchived}}
      </div>
      <div class="col s12 m3">
        <label>Origineel</label>
	      {{md-check name="Is originiele partituur" checked=score.isOriginal}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
	      {{md-input value=score.title label="Titel"}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m6">
	      {{md-input value=score.composer label="Componist"}}
      </div>
      <div class="input-field col s12 m6">
        {{md-input value=score.arranger label="Arrangeur"}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m8">
        {{md-input value=score.publisher label="Publisher"}}
      </div>
      <div class="input-field col s12 m4">
	      {{#md-input-duration for="duration" millis=score.duration}}Duur{{/md-input-duration}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
	      {{md-textarea value=score.comment label="Opmerking"}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
	      {{md-textarea value=score.loan label="Uitgeleend aan"}}
      </div>
    </div>
  </form>
</div>
