<div class="row">
  <div class="col s12">
    {{#data-table noDataMessage='Geen muziekstukken gevonden' content=filteredScores page=page size=size sort=sort filter=filter autoSearch=false as |t|}}
      {{#t.menu as |menu|}}
        {{#menu.general}}
          {{#link-to 'main.admin.scores.add'}}Nieuw{{/link-to}}
        {{/menu.general}}
        {{#menu.selected as |selection datatable|}}
          {{#if (eq status 'active')}}
            <a {{action 'changeStatus' selection datatable 'archived'}}>Archiveer</a>
          {{else}}
            <a {{action 'changeStatus' selection datatable 'active'}}>Activeer</a>
          {{/if}}
          <a {{action 'delete' selection datatable}}>Verwijder</a>
        {{/menu.selected}}
      {{/t.menu}}
      {{#t.content as |c|}}
        {{#c.header}}
          {{#if (eq status 'all')}}<th><!-- Status --></th>{{/if}}
          {{th-sortable field='location' currentSorting=sort label='Nr.'}}
          {{th-sortable field='title' currentSorting=sort label='Titel'}}
          {{th-sortable field='composer' currentSorting=sort label='Componist'}}
          {{th-sortable field='arranger' currentSorting=sort label='Arrangeur'}}
          {{th-sortable field='genre' currentSorting=sort label='Genre'}}
          <th># Partituren</th>
          {{th-sortable field='modified' currentSorting=sort label='Aangepast'}}
          <th><!-- Info icon --></th>
        {{/c.header}}
        {{#c.body as |row|}}
          {{#if (eq status 'all')}}
            <td class="center">
              {{#if row.isActive}}
                <i class="material-icons green-text">description</i>
              {{else}}
                <i class="material-icons grey-text">archive</i>
              {{/if}}
            </td>
          {{/if}}
          <td>{{row.location}}</td>
          <td>{{row.title}}</td>
          <td>{{row.composer}}</td>
          <td>{{row.arranger}}</td>
          <td>{{#if row.genre}}{{t row.genre}}{{/if}}</td>
          <td>{{row.parts.length}}</td>
          <td>{{moment-format row.modified dateFormat}}</td>
          <td>
            {{#link-to 'main.admin.scores.edit' row}}
              <i class="material-icons">info</i>
            {{/link-to}}
          </td>
        {{/c.body}}
      {{/t.content}}
    {{/data-table}}
  </div>
</div>
