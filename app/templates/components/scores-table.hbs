<div class="row">
  {{#if archived}}
    {{#if scores}}
      {{md-btn text='Activeer' icon='mdi-content-inbox' action='toggleArchive' isDisabled=selectionIsEmpty}}
    {{/if}}
  {{else}}
    {{#link-to 'admin.scores.add' class="waves-effect waves-light btn"}}<i class="mdi-content-add left"></i> Nieuw{{/link-to}}
    {{#if scores}}
      {{md-btn text='Archiveer' icon='mdi-content-archive' action='toggleArchive' isDisabled=selectionIsEmpty}}
    {{/if}}
  {{/if}}
  {{#if scores}}
    {{md-btn text='Verwijder' icon='mdi-action-delete' action='delete' isDisabled=selectionIsEmpty}}
  {{/if}}
</div>

{{#if scores}}
  <div class="row">
    <div class="col s12">
      <table class="striped">
	<thead>
	  <tr>
	    <th><!-- Archived --></th>
	    <th>Titel</th>
	    <th>Componist</th>
	    <th>Arrangeur</th>
	    <th>Genre</th>
	    <th>Duur</th>
	    <th># Partituren</th>
	    <th><!-- Buttons --></th>
	  </tr>
	</thead>

	<tbody>
	  {{#each scores as |score|}}
	    <tr>
	      <td>{{md-check checked=score.isSelected}}</td>
	      <td>{{score.title}}</td>
	      <td>{{score.composer}}</td>
	      <td>{{score.arranger}}</td>
	      <td>{{t-label value=score.genre}}</td>
	      <td>{{fmt-duration millis=score.duration}}</td>
	      <td>{{score.parts.length}}</td>
	      <td>
		<a {{action 'openDetail' score}}><i class="material-icons">info</i></a>
		{{#link-to 'admin.scores.edit' score}}<i class="material-icons">mode_edit</i>{{/link-to}}
		<a {{action 'openNewMusicPart' score}}><i class="material-icons">attach_file</i></a>

	      </td>
	    </tr>
	  {{/each}}
	</tbody>
      </table>
    </div>
  </div>
{{else}}
  <p>Geen muziekstukken</p>
{{/if}}

{{score-detail-modal isOpen=detailIsOpen score=selectedScore deletePart=deletePart}}
{{music-part-create-modal isOpen=newMusicPartIsOpen score=selectedScore musicPart=newMusicPart addFile=addFile savePart=savePart}}

