{{score-form score=score}}

<h3>Partituren</h3>

{{#if score.parts}}
  <div class="row">
    <div class="col s12">
      <table class="striped">
	<thead>
	  <tr>
	    <th>Naam</th>
	    <th>Instrument</th>
	    <th>Stem</th>
	    <th>Toonaard</th>
	    <th>Sleutel</th>
	    <th></th>
	  </tr>
	</thead>

	<tbody>
	  {{#each score.parts as |part|}}
	    <tr>
	      <td>{{part.name}}</td>
	      <td>{{t-label value=part.instrument}}</td>
	      <td>{{t-label value=part.instrumentPart}}</td>
	      <td>{{t-label value=part.key}}</td>
	      <td>{{t-label value=part.clef}}</td>
	      <td><a {{action 'deletePart' part}}><i class="material-icons">delete</i></a></td>
	    </tr>
	  {{/each}}
	</tbody>
      </table>
    </div>
  </div>
{{/if}}

<div class="row">
  {{#md-btn action='cancel'}}Klaar{{/md-btn}}
</div>
