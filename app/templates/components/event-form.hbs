{{#if isCollapsed}}
  <div {{action (toggle "isCollapsed" this)}} class='btn-floating btn-large waves-effect waves-light'><i class="material-icons">add</i></div>
{{else}}
  <h5>Nieuw evenement</h5>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="col s12 m4 l2">
	        {{t-select options=eventTypes required=true value=type label="Type"}}
        </div>
        <div class="input-field col s12 m4 l2">
	        {{md-input value=name label="Titel"}}
        </div>
        <div class="input-field col s12 m4 l2">
	        {{md-input-date label="Datum" value=datepicker numberOfYears=200}}
        </div>
      </div>
    </form>
  </div>

  <div class="row">
    {{#md-btn action='save'}}Opslaan{{/md-btn}}
    {{#md-btn action='cancel'}}Annuleer{{/md-btn}}
  </div>
{{/if}}