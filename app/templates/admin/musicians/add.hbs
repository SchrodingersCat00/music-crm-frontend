<h3>Nieuwe muzikant</h3>

<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="col s12 m2">
	{{t-select options=prefixes value=model.prefix blankLabel="-" label="Aanspreking"}}
      </div>
      <div class="input-field col s12 m4">
	{{md-input value=model.firstName label="Voornaam"}}
      </div>
      <div class="input-field col s12 m4">
	{{md-input value=model.lastName label="Achternaam"}}
      </div>
    </div>
    
    <h5>Adres</h5>
    <div class="row">
      <div class="input-field col s12 m6">
	{{md-input value=model.address.street label="Straat"}}
      </div>
      <div class="input-field col s12 m2">
	{{md-input value=model.address.number label="Nummer"}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m2">
	{{md-input value=model.address.postCode label="Postcode"}}
      </div>
      <div class="input-field col s12 m6">
	{{md-input value=model.address.city label="Gemeente"}}
      </div>
    </div>

    <h5>Contactgegevens</h5>
    <div class="row">
      <div class="input-field col s12 m4">
	{{md-input value=model.email label="Email"}}
      </div>
    </div>
    <div class="row">
      {{#each model.telephones as |telephone|}}
	<div class="input-field col s12 m4">
	  {{md-input value=telephone.value label="Telefoon"}}
	</div>
      {{/each}}
    </div>

    <h5>Overige</h5>
    <div class="row">
      <div class="col s12 m4">
	{{t-select options=instruments value=model.instrument blankLabel="-" label="Instrument"}}
      </div>
      <div class="input-field col s12 m4">
	{{md-input-date label="Geboortedatum" value=model.birthdate numberOfYears=200}}
      </div>
    </div>

  </form>
</div>

<div class="row">
  {{#md-btn action='save'}}Opslaan{{/md-btn}}
  {{#md-btn action='cancel'}}Annuleer{{/md-btn}}
</div>
