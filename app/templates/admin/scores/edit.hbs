<h2 class="green-text">Gegevens</h2>

<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s12 m8">
	{{#md-input-text for="title" value=title}}Titel{{/md-input-text}}
      </div>
      <div class="col s12 m2">
	{{#t-select options=genres value=genre}}Genre{{/t-select}}
      </div>
      <div class="input-field col s12 m2">
	{{md-switch off="Gearchiveerd" on="In gebruik" value=isActive}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m4">
	{{#md-input-text for="composer" value=composer}}Componist{{/md-input-text}}
      </div>
      <div class="input-field col s12 m4">
	{{#md-input-text for="arranger" value=arranger}}Arrangeur{{/md-input-text}}
      </div>
      <div class="input-field col s12 m4">
	{{#md-input-text for="publisher" value=publisher}}Uitgeverij{{/md-input-text}}
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m10">
	{{#md-input-textarea for="description" value=description}}Beschrijving{{/md-input-textarea}}
      </div>
	<div class="input-field col s12 m2">
	  {{#md-input-duration for="duration" millis=duration}}Duur{{/md-input-duration}}
	</div>
    </div>
  </form>
</div>

<h2 class="green-text">Partituren </h2>
<span><a class="btn-floating waves-effect waves-light modal-trigger" href="#music-part-form-modal"><i class="mdi-content-add"></i></a></span>
<div class="row">
    <table class="striped centered">
      <thead>
	<tr>
	  <th>Instrument</th>
	  <th>Stem</th>
	  <th>Toonaard</th>
	  <th>Sleutel</th>
	  <th></th>
	</tr>
      </thead>
      <tbody>
	{{#each parts as |part|}}
	  <tr>
	    <td>{{t-label value=part.instrument}}</td>
	    <td>{{t-label value=part.instrumentPart}}</td>
	    <td>{{part.key}}</td>
	    <td>{{t-label value=part.clef}}</td>
	    <td class="icons">
	      <a href={{part.file}} target="_blank" title="Download"><i class="small mdi-file-file-download"></i></a>
	      <a {{action "deleteMusicPart" part}} title="Verwijder"><i class="small mdi-action-delete"></i></a>
	    </td>
	  </tr>
	{{else}}
	  <tr class="no-rows"><td colspan="5">Nog geen partituren opgeladen</td></tr>
	{{/each}}
      </tbody>
    </table>
  {{music-part-form-modal action="addMusicPart"}}
</div>

<div class="row">
  <a class="btn waves-effect waves-light" {{action 'save'}}>Opslaan</a>
  <a class="btn waves-effect waves-light" {{action 'cancel'}}>Annuleer</a>
</div>
