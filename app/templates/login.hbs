<div class="row">
  <div class="col s12 m6 offset-m3 l4 offset-l4 center">
    <div class="center"><h1>Bravoer</h1></div>
    <div class="row">
      {{#if errorMessage}}
	{{#md-card-panel class="red darken-1" bodyClass="white-text"}}
	  {{errorMessage}}
	{{/md-card-panel}}
      {{/if}}
    </div>
    <div class="col s12 z-depth-3">
      <form>
	<div class="row">
	  {{md-input value=model.nickname label="Gebruikersnaam" icon="mdi-social-person"}}
	  {{md-input value=model.password label="Wachtwoord" type="password" icon="mdi-communication-vpn-key"}}
	  {{#md-btn action='login'}}Login{{/md-btn}}
	</div>
      </form>
    </div>
  </div>
</div>

