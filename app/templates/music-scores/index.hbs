<h1>Partituren</h1>

<div class="row">
  <div class="col s12 m6 l3">
    <label>Instrument</label>
    {{view "select" content=instruments optionValuePath="content.value" optionLabelPath="content.label" value=instrument }}      
  </div>
</div>

<div class="row">
  {{#each score in model}}
    <div class="col s12 m6">
      <div class="card grey lighten-4">
	<div class="card-content">
          <span class="card-title">{{score.title}}</span>
	  <p>{{score.componist}}{{#if score.arranger}}, arr. {{score.arranger}}{{/if}}</p>
	  <div class="card-action right-align">
	    {{#each part in score.musicParts}}
              <a class="btn" href="#">
		{{#if part.instrumentPart}}
		  {{part.instrumentPart}}
		{{else}}
		  Download
		{{/if}}
	      </a>
	    {{else}}
	      <a class="btn disabled">Niet beschikbaar</a>
	    {{/each}}
          </div>
	</div>
      </div>
    </div>
  {{/each}}
  <div class="col s12 m6">
    <div class="card grey lighten-4">
      <div class="card-content">
        <span class="card-title">Dance of the Comedians</span>
	<p>Bedrich Smetana</p>
	<div class="card-action right-align">
          <a class="btn" href="#">Solo</a>
          <a class="btn" href="#">Repiano</a>
          <a class="btn" href='#'>1e</a>
          <a class="btn" href='#'>2e</a>
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}
